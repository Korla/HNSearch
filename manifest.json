{
  "manifest_version": 2,

  "name": "HN current page search",
  "description": "Fetches HN threads for the current visited page",
  "version": "0.0.2",

  "browser_action": {
    "default_icon": "icons/180x180.png",
    "default_popup": "index.html",
    "default_title": "Search HN"
  },
  "permissions": [
    "activeTab"
  ]
}
